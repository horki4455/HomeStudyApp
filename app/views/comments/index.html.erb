<div class="container mb-5 pt-2">
<%= render 'search_form', url: comments_path %>
  <h1><%= '詳細一覧' %></h1>
  <div class="row">
    <div class="col-md-12 mb-3">
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <table class="table table-striped">
        <thead>
        <tr>
          <th scope="col">生徒名</th>
          <th scope="col">内容</th>
          <th scope="col">日付</th>
          <th scope="col"></th>
        </tr>
      </thead>
    <tbody>
      <% if @comments.present? %>
        <%= render @comments %>
      <% else %>
        <%=  '詳細がありません'  %>
      <% end %>
    </tbody>
  </table>
</div>
