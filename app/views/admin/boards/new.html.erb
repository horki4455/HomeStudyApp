<div class="container">
  <div class="row">
    <div class="col-lg-8 offset-lg-2">
    <h1><%= '生徒作成' %></h1>

    <%= form_with model: @board, url: admin_boards_path, local: true do |f| %>
      <div class="form-group">
        <%= f.label :名前 %>
        <%= f.text_field :name, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :メール %>
        <%= f.text_field :mail, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= f.label :その他補足 %>
        <%= f.text_area :body, class: 'form-control', row: 5, style: 'height: 80px' %>
      </div>

      <%= f.file_field :image, class: 'form-control', id: :'js-preview-img' %>
      <%= image_tag @board.image.url, id: :js_img_preview %>
      <%= f.submit class: 'btn btn-primary' %>
    <% end %>
    </div>

  </div>
</div>
