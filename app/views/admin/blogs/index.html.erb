
<p id="notice"><%= notice %></p>

<h1>予定表</h1>

<table>
  <thead>
    <tr>
      <th>タイトル</th>
      <th>時間</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @blogs.each do |blog| %>
      <tr>
        <td><%= blog.title %></td>
        <td><%= blog.start_time.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= link_to 'Show', admin_blog_path(blog.id) %></td>
        <td><%= link_to 'Edit', edit_admin_blog_path(blog.id) %></td>
        <td><%= link_to 'Destroy',admin_blog_path(blog.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '予定を書く', new_admin_blog_path %>

<%= month_calendar events: @blogs do |date, blogs| %>
  <%= date.day %>

  <% blogs.each do |blog| %>
    <div>
      <%= link_to blog.title,  admin_blog_path(blog.id) %>
    </div>
  <% end %>
<% end %>