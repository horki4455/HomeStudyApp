<div class="col-sm-12 col-md-6 col-lg-4 mb-3">
  <div id="student-id-1">
    <div class="card">
      <%= image_tag student.image.url, class: 'card-img-top',width: '300px', height: '200px' %>
        <div>
          <div class="card-body">
            <h4 class="card-title">
            <%= link_to '募集一覧へ', admin_student_path(student) %>
            </h4>
            <ul class="list-inline">
              <p class="card-text"><%= student.body %></p>
              <li class="list-inline-item"> <i class="far fa-calendar"></i><%= I18n.l(student.updated_at, format: :default)%></li>
            </ul>
            <div class='mr10 float-right'>
              <%= render 'crud_menus', student: student %>
            </div>
          </div>
      　</div>
    </div>
  </div>
</div>
