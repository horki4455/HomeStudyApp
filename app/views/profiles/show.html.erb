<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">プロフィール</h1>
      <%= link_to '編集画面', edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          
          <td><%= current_user.email %></td>
        </tr>
        <tr>
          <td><%= current_user.full_name %></td>
        </tr>
        <tr>
          <td><%= image_tag current_user.image.url, class: 'rounded-circle', size: '50x50' %></td>
        </tr>
        <%= link_to '今日のタスクを設定する', tasks_path %>
        <%= render 'relationships/follow_button', { user: @user } %>
      </table>
    </div>
  </div>
</div>