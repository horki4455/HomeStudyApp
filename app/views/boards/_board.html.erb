<div class="col-sm-12 col-md-6 col-lg-4 mb-3">
  <div id="board-id-1">
    <div class="card">
      <%= image_tag board.image.url, class: 'card-img-top',width: '300px', height: '200px' %>
        <div>
          <div class="card-body">
            <h4 class="card-title">
              <%= link_to board.name, board_path(board) %>
            </h4>
            <ul class="list-inline">
              <p class="card-text"><%= board.body %></p>
              <li class="list-inline-item"> <i class="far fa-calendar"></i><%= I18n.l(board.updated_at, format: :default)%></li>
            </ul>
            <div class='mr10 float-right'>
              <% if current_user.own?(board) %>
           　　  <%= render 'crud_menus', board: board %>
        　　　 <% end %>
            </div>
          </div>
      　</div>
    </div>
  </div>
</div>