
<div class="container pt-3">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1 class="float-left mb-5">プロフィール</h1>
      <%= link_to '編集画面', edit_profile_path, class: 'btn btn-success float-right' %>
      <table class="table">
        <tr>
          <th>年齢<td><%= current_user.age %></td></th>
        </tr>

        <tr>
          <th>Eメール<td><%= current_user.email %></td></th>
        </tr>

        <tr>
          <th>名前<td><%= current_user.full_name %></td></th>
        </tr>

        <tr>
          <th>ひとこと<td><%= current_user.profile %></td></th>
        </tr>

        <tr>
          <th>写真<td><%= image_tag current_user.image.url, class: 'rounded-circle', size: '50x50' %></td></th>
        </tr>
      </table>

      <div class="container mb-5 pt-2">
      <%= link_to 'タスク作成', new_task_path, class: 'btn btn-success float-right' %>
        <h1><%= 'タスク一覧' %></h1>
        <div class="row">
          <div class="col-md-12 mb-3">
          </div>
        </div>
        <div class="row">
          <div class="col-sm-12">
            <table class="table table-striped">
              <thead>
              <tr>
                <th scope="col">内容</th>
                <th scope="col">日付</th>
                <th scope="col"></th>
              </tr>
            </thead>
          <tbody>
          <%= render @tasks %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>












