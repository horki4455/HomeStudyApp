

<div class="main posts-new">
  <div class="container">
    <h1 class="form-heading">編集画面</h1>
    <%= form_with model: @post, url: post_path(@post), local: true do |f| %>
      <div class="form-group">
        <%= f.text_area :content, class: 'form-control', row: 5, style: 'height: 80px' %>
      </div>
      <%= f.submit '編集する', class: 'btn btn-primary' %>
    <% end %>
  </div>
</div>