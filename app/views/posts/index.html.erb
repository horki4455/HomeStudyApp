<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag current_user.image.url, class: 'rounded-circle', size: '50x50' %></td>
        </div>
        <div class="posts-show-item">
          <div class="post-user-name">
          </div>
          <p>
            <%= post.content %>
          </p>
          <div class="post-time">
            <%= post.created_at %>
          </div>
        </div>
        <div class="post-right">
          <div class="post-user-name">
        </div>
          <%= link_to '詳細画面(show)', post_path(post), class: 'nav-link' %>
        </div>
      </div>
    <% end %>
    <%= paginate @posts %>
    <%= link_to 'post作成', new_post_path, class: 'nav-link' %>
  </div>
</div> 