<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag post.user.image_url, class: 'rounded-circle', size: '50x50' %></td>
        </div>
        <div class="posts-show-item">
        <% if post.user_id == current_user.id %>
          <div class="post-menus">
          <%= link_to '編集', edit_post_path(post) %>
          <%= link_to '削除', post_path(post), method: :delete %>
          </div>
        <% else %>
          <div class="post-user-name">
            <%= render partial: 'likes', locals: { post: post} %>
          </div>
      　<% end %>
          <p>
            <%= post.content %>
          </p>
          <div class="post-time">
            <%= post.created_at %>
          </div>

        </div>
        <div class="post-right">
          <div class="post-user-name">
        </div>

        </div>
      </div>
    <% end %>
    <%= paginate @posts %>
    <%= link_to '今日の学習をアウトプットする', new_post_path, class: 'btn btn-primary' %>
  </div>
</div>
