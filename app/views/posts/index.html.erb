<div class="main posts-index">
  <div class="container">
    <% @posts.each do |post| %>
      <div class="posts-index-item">
        <div class="post-left">
          <%= image_tag current_user.image.url, class: 'rounded-circle', size: '50x50' %></td>
        </div>
        <div class="posts-show-item">
        <% if post.user_id == current_user.id %>
          <div class="post-menus">
            <%= link_to("編集", "/posts/#{post.id}/edit") %>
            <%= link_to("削除", post_path(post.id), method: :delete) %>
          </div>
      　<% end %>
          <div class="post-user-name">
            <%= render partial: 'likes', locals: { post: post} %>
          </div>
          <p>
            <%= post.content %>
          </p>
          <div class="post-time">
            <%= post.created_at %>
          </div>

        </div>
        <div class="post-right">
          <div class="post-user-name">
        </div>
          <%= link_to '詳細画面(show)', post_path(post), class: 'nav-link' %>
          
        </div>
      </div>
    <% end %>
    <%= paginate @posts %>
    <%= link_to 'post作成', new_post_path, class: 'nav-link' %>
  </div>
</div> 